</div>
<div class="container mt-5">
    <div class="row">
        @{int i = -1;}
        @foreach (var item in ((List<ProductDTO>) @ViewBag.Products).Where(item => item.Category == "All"))
        {
            i++;
            @if (i > 3)
            {
                break;
            }

            <div class="col-md-3">
                <div class="card">
                    <img src="images/starsblue.png" class="card-img-top" />
                    <div class="card-body">
                        <h5>@item.Name</h5>
                        <h5>$@item.Price</h5>
                        <div class="input-group input-group-sm mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Quantity</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Quantity" aria-describedby="inputGroup-sizing-sm" onkeypress='validate(event)'>
                        </div>
                        <button class="btn btn-danger" onclick="updateCart(event)">
                            <i class="fa fa-cart-plus" aria-hidden="true">
                                Add to Cart
                            </i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

